<% if(successMsg && successMsg.length > 0) {%>
     <div class="alert alert-success alert-dismissible fade show col-6 offset-2 d-flex justify-content-between align-items-center" role="alert">
         <span><%= successMsg %></span>
         <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
     </div>
     
<% }%>
<% if(errorMsg && errorMsg.length > 0) {%>
     <div class="alert alert-danger alert-dismissible fade show col-6 offset-2 d-flex justify-content-between align-items-center" role="alert">
         <span><%= errorMsg %></span>
         <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
     </div>
     
<% }%>
